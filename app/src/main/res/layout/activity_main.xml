<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="#00701a"
            android:visibility="gone"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of Sports"
            android:visibility="gone"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/sportList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp" />

            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddSport"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@drawable/ic_sport"
                android:theme="@style/ThemeOverlay.AppCompat"
                />-->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddAthlete"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@drawable/ic_athlete"
                android:theme="@style/ThemeOverlay.AppCompat"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddMedal"
                android:tooltipText="Add Medal"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@drawable/ic_medal"
                android:theme="@style/ThemeOverlay.AppCompat"
               />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:src="@drawable/ic_fab_add"
                android:backgroundTint="#43a047"/>

        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>